{
  "name": "iv-openapi",
  "version": "1.0.0",
  "type": "module",
  "author": "ChunkyProgrammer",
  "license": "MIT",
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "eslint": "^8.55.0",
    "eslint-plugin-yml": "^1.10.0",
    "npm-run-all2": "^6.1.1",
    "openapi-types": "^7.0.0",
    "yaml": "^2.3.4",
    "yaml-eslint-parser": "^1.2.2"
  },
  "scripts": {
    "build": "run-s update-servers copy-swagger",
    "update-servers": "node ./scripts/update-servers.js",
    "copy-swagger": "node ./scripts/copy-open-api-yaml.js",

    "lint-validate": "run-p lint validate",
    "lint": "eslint --ext .yml,.yaml ./openapi/",
    "validate": "node ./scripts/validate-swagger.js",

    "build-clients": "run-s build-client-*",
    "build-client-typescript": "openapi-generator-cli generate -g typescript-axios -i ./swagger.yaml --additional-properties=supportsES6=true,withInterfaces=true -o ./dist/ts-client",
    "build-client-crystal": "openapi-generator-cli generate -g crystal -i ./swagger.yaml --additional-properties=moduleName=InvidiousAPIClient,shardAuthor=InvidiousTeam -o ./dist/crystal-client"
  }
}
